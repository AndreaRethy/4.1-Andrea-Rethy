{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "noImplicitAny": false,
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}