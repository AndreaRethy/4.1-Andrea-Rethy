{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "noImplicitAny": false,
        "skipLibCheck": true /* Skip type checking all .d.ts files. */
    },
    "include": ["./src/**/*.ts", "src/domain/entities/Task.ts"],
    "exclude": ["node_modules", "dist"]
}